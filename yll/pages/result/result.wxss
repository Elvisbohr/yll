/* pages/result/result.wxss */
.pages{
    overflow: hidden;
}
.time{
    font-size: 28rpx;
    color: #878787;
    text-align: center;
    position: absolute;
    top: 32rpx;
    left: 50%;
    transform: translateX(-50%); 
}
.header{
    margin: 120rpx 0;
}
.user{
    text-align: center;
    overflow: hidden;
}
.userImg{
    width: 200rpx;
    height: 200rpx;
    border-radius: 100rpx;
    margin-bottom: 18rpx;
}
.userName{
    font-size: 32rpx;
}
.look{
    color: #fdd835;
    font-size: 24rpx;
}
.vs{
    width: 118rpx;
    margin: 0 20rpx;
}
.main{
    margin-top: 64rpx;
    text-align: center;
    overflow: hidden;
}
.list{
    position: relative;
    margin: 0 0 30rpx 0;
    overflow: hidden;
}
.session{
    position: absolute;
    left: 66rpx;
    top: 0;
    font-size: 28rpx;
    color: #878787; 
    height: 64rpx;
    line-height: 64rpx;
}
.item{
    width: 140rpx;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
    border-bottom: 1px solid #212121;
    position: relative;
}
.item input{
    width: 100%;
    height: 100%
}
.z{
    font-size: 60rpx;
    margin: 0 76rpx;
}
.win{
    width: 48rpx;
    height: 48rpx;
    position: absolute;
    top: 6rpx;
    right: -16rpx;
}
.add{
    width: 120rpx;
    height: 64rpx;
}
.endGame{
    width: 90%;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 44rpx;
    background: #fdd835;
    color: #fff;
    font-size: 36rpx;
    position: absolute;
    bottom: 38rpx;
    left: 5%;
}